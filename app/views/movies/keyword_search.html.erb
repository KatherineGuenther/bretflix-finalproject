<h1 class="movie-matches-title col-12">Matches for '<%=@keyword%>'</h1>

<div class="col-sm-6 list-group">
  <h4><% @movies.each do |movie| %>
    <a href="/movies/<%= movie.id %>" class="list-group-item"><img src="<%= movie.poster %>" width="60" height="88" alt="<%= movie.title %>"> <%= movie.title %></a>
  <% end %></h4>
<%= paginate @movies %>

<%= link_to 'Home', root_path %>
</div>
